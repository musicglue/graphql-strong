{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib":[
      "esnext",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "newLine": "LF",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "rootDir": "src",
    "strictNullChecks": true,
    "target": "es6",
    "strict": true
  },
  "exclude": [
    "node_modules",
    "**/__tests__/*.ts",
    "**/__tests__/*/*.ts"
  ]
}
